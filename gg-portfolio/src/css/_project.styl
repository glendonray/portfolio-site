.project
    color: navy
    .project-row
        display: grid
        column-gap: columnGap
        row-gap: rowGap
        @media screen and (min-width: 769px) 
            grid-template-columns: 1fr 1fr
        .project-image
            border-radius: 2rem
            overflow: hidden
            width: 100%
            img
                width 100%
                height 100%
                object-fit cover
                object-position: center
        .project-details
            display: flex
            flex-direction: column
            row-gap: rowGap
            .project-text
                background-color: #fff
                padding: 2rem
                border-radius: 2rem
                overflow: hidden
                .project-description
                    font-size: 1.25rem
                    white-space: pre-line;
                    margin-bottom: 0;

    @media screen and (min-width: 769px) 
        &:nth-of-type(even)
            .project-row
                .project-image
                    order: 2
                .project-details
                    order: 1
#intro
    padding: 4rem 2rem
    color: black
    background-color: yellow
    h2
        text-align: left
        color: black
        margin-bottom: 1rem
    .intro-wrapper
        max-width: 1024px
        margin: 0 auto
        .intro
            display: grid
            column-gap: 4rem
            @media screen and (min-width: 769px) 
                grid-template-columns: 1fr 1fr
            .intro-text
                align-self: center;
                p
                    font-size: 1.5rem
            .portrait
                border-radius: 2rem
                overflow: hidden
                width: 100%
                img
                    width 100%
                    height 100%
                    object-fit cover
                    object-position: center